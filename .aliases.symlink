function op2env() {
    input_file="${1:-.env.example}"
    while IFS= read -r line || [[ -n "$line" ]]; do
        key="$(echo "$line" | awk -F "=" '{print $1}')"
        echo "${key}=\${${key}}"
    done < "$input_file" | op run --no-masking --env-file="$input_file" -- envsubst > .env
}

